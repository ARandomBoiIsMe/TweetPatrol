{
    "manifest_version": 3,
    "name": "XeetTracker",
    "description": "Protect your content from shameless thieves!",
    "version": "1.0",
    "action": {
        "default_popup": "popup.html"
    },
    "background": {
        "service_worker": "background.js"
    },
    "permissions": [
        "tabs",
        "scripting",
        "storage"
    ],
    "host_permissions": [
        "https://x.com/*"
    ]
}